<h2>Edit Profile</h2>
<%= form_for @user, html: { multipart: true } do |f| %>
<div id = "names">
  <%=f.label :first_name %>
  <%= f.text_field :first_name %>
  <%=f.label :last_name %>
  <%= f.text_field :last_name %>
</div>

<div id = "email-contact">
  <%=f.label :email %>
  <%= f.text_field :email %>
</div>

<div id = "phone-contact">
  <%= f.label :phone %>
  <%= f.text_field :phone %>
</div>

<div id = "location">
  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %>
</div>

<div id = "user-personalization">
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.file_field :avatar %>
</div>

<div id = "submit">
  <%= f.submit %>
</div>
<% end %>
