<div id="listingPageContainer">

	<div id="listingPageAddress">
		<h2>Your Address</h2>
		<form id="newListingForm">
			<div class="form-group">
				<label for="address">Address</label>
				<input type="text" name="address" id="listingAddress" class="form-control" placeHolder="123 Someplace St., New York, NY 10005">
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-md btn-default">Continue</button>
			</div>
		</form>
	</div><!--listingPageAddress-->

	<div id="listingPageInfo" class="hide">
		<h3>Info</h3>
		<div class="listingPhotoUpload"></div>
		<div class="listingInfo">
			<%=form_for @listing do |f|%>
				<%=f.hidden_field :address%>

				<div id="listing-form-space">
					<%=f.label :space_description%>
					<%=f.text_area :space_description%>
				</div>
				<div id="listing-form-neighborhood">
					<%=f.label :neighborhood_info %>
					<%=f.text_area :neighborhood_info %>
				</div>
				<div id="listing-form-transit">
					<%=f.label :public_transit_info %>
					<%=f.text_area :public_transit_info %>
				</div>
				<div id="listing-form-other-info">
					<%=f.label :other_info %>
					<%=f.text_area :other_info %>
				</div>
				<div id="listing-form-rules">
					<%=f.label :rules %>
					<%=f.text_area :rules %>
				</div>

				<%=f.submit "Continue"%>
			<%end%>
		</div>

		<div id="static-map">
		  <%= image_tag @map_image, id: "listing-show-map" %>
		</div>


	</div><!--listingPageInfo-->

</div>
