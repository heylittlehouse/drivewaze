<div id="ajaxParkingSpotMenuContainer">
	<button class="btn btn-md btn-primary" onclick="moveCalendar('backward')">Last Month</button>
	<button class="btn btn-md btn-primary" onclick="moveCalendar('forward')">Next Month</button>
	<table class="table" id="calendarTable" data-offset="0">

	</table>
</div>
<div id="parkingSpotMenuContainer" data-id="<%=@parking_slot.id%>">

	<div class="panel-group" id="parkingSpotMenuAccordion" role="tablist" aria-multiselectable="true">
	  <div class="panel panel-default">
	    <div role="tab" id="headingOne">
	      <h4 class="panel-title">
	        <a role="button" data-toggle="collapse" data-parent="#parkingSpotMenuAccordion" href="#propertyType" aria-expanded="false" aria-controls="propertyType" class="collapsed btn btn-lg btn-primary btn-block" style="color:white;">
	          Property Type
	        </a>
	      </h4>
	    </div>
	    <div id="propertyType" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
	      <div class="panel-body">
		    	<div id="propertyTypeMenu" data-type="<%=@parking_slot.slot_type%>">
					<button class="btn btn-default btn-block btn-md" id="drivewayButton" onclick="selectProperty(0)">
						<p>Driveway</p>
						<p>allow renters to use excessive capacity on your driveway</p>
					</button>

					<button class="btn btn-default btn-block btn-md" id="lawn" onclick="selectProperty(1)">
						<p>Lawn</p>
						<p>allow renters to park on your lawn</p>
					</button>

					<button class="btn btn-default btn-block btn-md" id="street" onclick="selectProperty(2)">
						<div class="row">
						<p>Street Side</p>
						<p>allow renters to park on the street side parking spot that you own</p>
						</div>
					</button>

					<button class="btn btn-default btn-block btn-md" id="permit" onclick="selectProperty(3)">
						<p>Permit</p>
						<p>allow renters to use your parking permit on adjacent property</p>
					</button>
				</div>
	      </div>
	    </div>
	  </div>

	  <div class="panel panel-default">
	    <div role="tab" id="headingTwo">
	      <h4 class="panel-title">
	        <a class="collapsed btn btn-lg btn-primary btn-block" role="button" data-toggle="collapse" data-parent="#parkingSpotMenuAccordion" href="#vehicleClass" aria-expanded="false" aria-controls="vehicleClass" style="color:white;">
	          Vehicle Class
	        </a>
	      </h4>
	    </div>
	    <div id="vehicleClass" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
	      <div class="panel-body">
		    	<div id="vehicleClassMenu" data-type="<%=@parking_slot.vehicle_class%>">
						<button class="btn btn-default btn-block btn-md" id="compactButton" onclick="selectVehicleClass(0)">
							<p>Compact</p>
							<p>ex. Chevy Spark, Toyota Yaris, Honda Civic, etc.</p>
						</button>

						<button class="btn btn-default btn-block btn-md" id="fullSizeButton" onclick="selectVehicleClass(1)">
							<p>Full Size</p>
							<p>ex. Chevy Malibu, Toyota Camery, Honda Accord, etc.</p>
						</button>

						<button class="btn btn-default btn-block btn-md" id="suvButton" onclick="selectVehicleClass(2)">
							<p>SUV</p>
							<p>ex. Chevy Tahoe, Toyota RAV4, Honda CRV, etc.</p>
						</button>
					</div>
	      </div>
	    </div>
	  </div>

	  <div class="panel panel-default">
	    <div role="tab" id="headingThree">
	      <h4 class="panel-title">
	        <a class="collapsed btn btn-lg btn-primary btn-block" role="button" data-toggle="collapse" data-parent="#parkingSpotMenuAccordion" href="#price" aria-expanded="false" aria-controls="price" style="color:white;">
	          Prices
	        </a>
	      </h4>
	    </div>
	    <div id="price" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
	      <div class="panel-body">
		    	<div id="priceMenu">

					<button class="btn btn-default btn-block btn-md" id="dailyButton" onclick="setPrice(1)">
						<p>Daily</p>
						<p>set daily price for this parking spot</p>
					</button>

					<button class="btn btn-default btn-block btn-md" id="weeklyButton" onclick="setPrice(2)">
						<p>Weekly</p>
						<p>set weekly price for this parking spot</p>
					</button>

					<button class="btn btn-default btn-block btn-md" id="monthlyButton" onclick="setPrice(3)">
						<p>Monthly</p>
						<p>set monthly price for this parking spot</p>
					</button>
				</div>
	      </div>
	    </div>
	  </div>
	</div>

	<button class="btn btn-primary btn-block btn-lg" onclick="showBlackoutCal()">Blackout Dates</button>
	<div id="blackout-cal"></div>

	<%= link_to "Save Parking Space", listing_parking_slots_path(@parking_slot.listing), class: "btn btn-primary btn-block btn-lg" %>
</div>
